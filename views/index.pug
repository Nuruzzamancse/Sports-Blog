extends layout

block content
  .jumbotron.showcase
    .container
      h1 SportsBlog
      p.lead A simple and clean sports based blog
  .container
    .row
      .col-md-12
        each article, i in articles
          a(href='/articles/show/'+article._id)
            h2.post-title #{article.title}
          h4.post-subtitle #{article.subtitle}
          p.post-meta
            | Posted By #{article.author}
            |on #{moment(article.ceated_at).format('MMM Do YYY, h:mm::ss a')}
            hr
